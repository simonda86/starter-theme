{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}">
		<header class="header" >
			{% block header %}
				<nav id="nav-main" class="navbar navbar-expand-lg navbar-light bg-light" role="navigation">
					{% include "menu.twig" with {'menu': menu.get_items} %}
				</nav>
			{% endblock %}
		</header>

		{% if not fn('is_front_page') and post.thumbnail %}
			<div class="post-thumbnail">
				<img src="{{ post.thumbnail.src | resize(1280, 400) }}" alt="{{ post.title }}" class="img-fluid">
			</div>
		{% endif %}

		<section id="content">
			<main>
                {% block content %}
					Sorry, no content
                {% endblock %}
			</main>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
